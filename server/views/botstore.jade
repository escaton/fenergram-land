html
    head
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
        style.
            * {
                margin: 0;
                padding: 0;
            }
            body {
                //- background: transparent url("/public/img/screen.png") repeat scroll 0 -110px /25%;
                padding-top: 10px;
            }
            .list {
                list-style-type: none;
            }
            .list__item {
                display: block;
                box-sizing: border-box;
                position: relative;
            }
            .list__icon {
                width: 56px;
                height: 56px;
                background: none center center /cover;
                display: block;
                position: absolute;
                border-radius: 50%;
                top: 5px;
                left: 8px;
                box-shadow: inset 0 5px 7px rgba(0,0,0,.3);
            }
            .list__text {
                font-size: 15px;
                font-family: sans-serif;
                line-height: 65px;
                border-bottom: 1px solid #ccc;
                display: block;
                margin-left: 70px;
            }
            .list__link {
                text-decoration: none;
                color: #000;
                display: block;
            }
    body
        ul.list
            each bot, i in bots
                li.list__item
                    a(href="#{bot.link}").list__link
                        i(style="background-image: url(#{bot.image});").list__icon
                        span.list__text #{bot.name}

